<LinearLayout
    android:id="@+id/my_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.android.tutr.AccSetActivity"
    android:background="@color/aluminium">

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/peacockBlue"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Change Password"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/enterNewPassword"
        android:layout_width="289dp"
        android:layout_height="@dimen/acc_settings_height"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="@string/prompt_new_password"
        android:singleLine="true"
        android:background="@color/peacockBlue"
        android:textColorHint="#ffffff"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/email_sign_in_button"
        android:layout_alignBottom="@+id/email_sign_in_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHighlight="#ffffff"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/confirmNewPassword"
        android:layout_width="289dp"
        android:layout_height="@dimen/acc_settings_height"
        android:hint="@string/prompt_confirm_new_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:background="@color/peacockBlue"
        android:textColorHint="#ffffff"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/email_sign_in_button"
        android:layout_alignBottom="@+id/email_sign_in_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHighlight="#ffffff"
        android:textColor="#ffffff" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/peacockBlue"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Change Name"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/enterNewName"
        android:layout_width="289dp"
        android:layout_height="@dimen/acc_settings_height"
        android:hint="@string/prompt_enter_new_name"
        android:imeActionId="@+id/change"
        android:imeActionLabel="@string/save"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:background="@color/peacockBlue"
        android:textColorHint="#ffffff"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/email_sign_in_button"
        android:layout_alignBottom="@+id/email_sign_in_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHighlight="#ffffff"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/accountSettingsSaveChangesButton"
        style="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:allowUndo="true"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
